{
  "name": "@pguerrero/viz-components",
  "version": "0.1.0",
  "description": "Framework-agnostic Web Components library for data visualization built with Lit and Highcharts",
  "type": "module",
  "main": "./dist/viz-components.umd.js",
  "module": "./dist/viz-components.es.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/viz-components.es.js",
      "require": "./dist/viz-components.umd.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "vite build",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "web-components",
    "lit",
    "highcharts",
    "data-visualization",
    "charts",
    "dashboard",
    "framework-agnostic"
  ],
  "author": "Paul Guerrero Linares",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pguerrerolinares/viz-components"
  },
  "dependencies": {
    "highcharts": "^12.4.0",
    "lit": "^3.3.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.2",
    "typescript": "^5",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
